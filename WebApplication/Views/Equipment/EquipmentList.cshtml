
@{
    ViewBag.Title = "EquipmentList";
}

<h2>EquipmentList</h2>

<link href="~/AdminLTE/plugins/datatables/css/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div style="width:90%; margin:0 auto " class="tablecontainer">
    <a class="popup btn btn-primary" href="/Equipment/Save/0" style="margin-bottom:20px;">Add new equipement</a>
    <table id="myDatatable">
        <thead>
            <tr>
                <th>ID_equipment</th>
                <th>EquipementName</th>
                <th>EquipmentDescription</th>

                <th>Edit</th>


            </tr>

        </thead>


    </table>




</div>





@section Scripts {

    <script src="~/AdminLTE/plugins/datatables/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>

        $(document).ready(
            function () {
                var oTable = $('#myDatatable').DataTable({
                    "ajax":
                      {
                          "url": '/Equipment/GetEquipment',
                          "type": "get",
                          "datatype": "json"
                      },

                    "columns":
                        [{ "data": "ID_equipment", "autoWidth": true, "render": function (data) { return '<a class="popup" href="/Equipment/Save/'+ data +'"> Edit </a>' } },
                        { "data": "EquipementName", "autoWidth": true },
                        { "data": "EquipmentDescription", "autoWidth": true }
                        ]
                })


                $('tablecontainer').on('click', 'a popup', function (e) { e.preventDefault(); })
                OpenPopup($(this).attr('href'));


                function OpenPopup(pageurl)
                {
                    var $pagecontent = $('<div/>');

                    $pagecontent.load(pageurl);

                    $dialog = $('<div class="popupWindow" style="overflow:auto"></div>').html($pagecontent).dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        model: true,
                        title: 'Popup dialog',
                        height: 550,
                        width: 600,
                        close: function ()
                        {
                            $.dialog.dialog('destroy').remove();
                        }
                    })

                    $('.popupWindow').on('submit', '#popupForm', function (e) {
                        var url = $('#popupForm')[0].action;

                        $ajax({

                            type: "POST",
                            url: url,
                            data: $('#popupForm').serialize(),
                            success: function (data) {

                                if (data.status)
                                {
                                    $dialog.dialog('close');
                                    oTable.ajax.reload();
                                }

                            }
                           
                     
                        })


                        e.preventDefault()
                    })

                    $dialog.dialog('open');

                }

            })


    </script>
}