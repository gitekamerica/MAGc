@{
    ViewBag.Title = "Wyszukaj użytkownika";
}


<h2>Wyszukaj: OD KOGO:</h2>
<br />

@using (Html.BeginForm("Save", "Person", FormMethod.Post, new { id = "popupForm" }))
{

@Html.Label("Nazwisko i imie")


    @Html.TextBox("PassId", null, new { style = " margin-left:20px;  width: 250px; " })



    <div class="table-responsive" style="margin-top:40px;">
        <table class="table" id="PersonDetail">
            <tbody>
                <tr>
                    <th style="width: 20%">ID:</th>
                    <td div id="IdPerson"></td>
                </tr>
                <tr>
                    <th>Imie</th>
                    <td id="FirstName"></td>
                </tr>

                <tr>
                    <th>Nazwisko</th>
                    <td id="Surname"></td>
                </tr>
                <tr>
                    <th>Stanowisko</th>
                    <td id="Position"></td>
                </tr>
            </tbody>
        </table>
    </div>





<div align="right">
    <input    type="submit" class= "btn btn-danger pull-right" style="margin-top:40px; margin-left:40px; margin-right:40px;"  value="Zapisz" />
</div>





}



